generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  posts    Post[]
}

model Post{
  id        Int   @id @default(autoincrement())
  filename  String
  month     String
  url       String
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id]) 
  banks     BankStatement[]
  bills   BillingReport[]
} 

model BankStatement{
  id            Int   @id @default(autoincrement())
  date          DateTime
  description   String
  deposit       Float
  withdrawl     Float
  postId        Int
  post          Post   @relation(fields: [postId], references: [id])
}

model BillingReport{
  id            Int   @id @default(autoincrement())
  patientname   String
  date          DateTime
  procedure     String
  billed        Float
  paid          Float
  paymentmethod String
  postId        Int
  post          Post   @relation(fields: [postId], references: [id])
}